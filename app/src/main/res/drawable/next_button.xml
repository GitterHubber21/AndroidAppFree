<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="@color/white" /> <!-- Button color -->

    <!-- Make the corners less rounded by reducing the radius -->
    <corners android:radius="15dp" /> <!-- You can decrease this value for sharper corners -->

    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />

    <stroke
        android:width="2dp"
        android:color="@color/black" /> <!-- Optional: outline stroke -->
</shape>
